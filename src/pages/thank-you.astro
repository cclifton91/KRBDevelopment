---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Thank You">
	<section class="relative h-screen flex justify-center align-middle py-24 overflow-hidden">
		<div class="container px-4 mx-auto relative">
			<div class="max-w-md mx-auto text-center relative z-10">
				<h3 class="text-4xl lg:text-5xl font-heading mb-12 text-yellow-600">Thank You</h3>
				<p class="mb-10">We've received your message and we will reach out to you shortly!</p>
				<a class="inline-block px-8 py-3 text-white font-bold bg-black hover:bg-gray-900" href="/">Go back to Homepage</a>
			</div>
		</div>
	</section>
</Layout>
