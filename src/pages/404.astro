---
import Layout from "../layouts/Layout.astro"
---

<Layout title="404">
	<section class="py-24 flex flex-row min-h-screen justify-center items-center">
		<div class="container px-4 mx-auto">
			<div class="flex flex-wrap -mx-4 items-center">
				<div class="w-full lg:w-1/2 px-4 mb-16 lg:mb-0">
					<div class="max-w-sm mx-auto">
						<h3 class="text-4xl lg:text-5xl font-heading mb-12 text-red-800">Error 404</h3>
						<h4 class="text-4xl lg:text-5xl font-heading mb-12">Sorry, we can't find that page or something has gone wrong...</h4>
						<a class="inline-block px-8 py-3 text-white font-bold bg-yellow-600 hover:bg-yellow-700" href="/#home">Go back to Homapage</a>
					</div>
				</div>
				<div class="w-full lg:w-1/2 px-4">
					<div class="max-w-md mx-auto relative">
						<img class="relative w-full" src="/src/assets/404-error.svg" alt="" style="z-index: 2;" />

						<!--<div class="absolute top-0 left-0 mt-8 ml-8 w-full h-full bg-red-800"></div>-->
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
