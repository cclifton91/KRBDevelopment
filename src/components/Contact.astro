---
import data from "../data/settings.json"
import socials from "../data/social.json"
import { Icon } from "astro-icon/components"
import Form from "./interactive/Form.astro"
---

<section class="relative" id="contact">
	<div class="container px-4 mx-auto relative">
		<div class="flex flex-wrap -mx-4 pb-14 md:mb-8 items-center">
			<div class="w-full md:w-1/2 px-4 mb-6">
				<h2 class="text-5xl lg:text-6xl font-heading">Contact</h2>
			</div>
			<div class="w-full md:w-1/2 px-4">
				<p class="text-xl text-gray-500">Improve your community with us.</p>
				<p class="text-lg">Get in touch.</p>
			</div>
		</div>
		<div class="flex flex-wrap -mx-4">
			<div class="w-full md:w-1/2 px-4">
				<div class="flex flex-wrap -mx-4">
					<div class="w-full md:w-1/2 px-4 mb-10">
						<p class="text-gray-500">E-mail</p>
						<a class="inline-block text-black hover:underline" href={`mailto:${data.email}`}>{data.email}</a>
					</div>
					<div class="w-full md:w-1/2 px-4 mb-10">
						<p class="text-gray-500">Phone</p>
						<p>{data.phone}</p>
					</div>
					<div class="w-full px-4 pb-8">
						<p class="text-gray-500 mb-2">Socials</p>
						<div>
							<a href={socials.facebook}><Icon name="facebook(24x24)" class="inline-block size-8" aria-label="facebook icon" /></a>
							<a href={socials.instagram}><Icon name="instagram(24x24)" class="inline-block size-8" aria-label="instagram icon" /></a>
							<a href={socials.linkedin}><Icon name="linkedin(24x24)" class="inline-block size-8" aria-label="linkedin icon" /></a>
						</div>
					</div>
				</div>
			</div>
			<div class="w-full md:w-1/2 px-4">
				<div class="px-6 py-10 md:px-10 bg-black text-white shadow-xl">
					<!-- Form Here -->
					<Form />
				</div>
			</div>
		</div>
	</div>
</section>
